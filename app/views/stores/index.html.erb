<h2>Welcome to Iron Yard Sale!</h2>

<%= link_to "Open a Store", new_store_path, class: "btn btn-default" %>

<h2><font color="purple">Stores:</font></h2>
<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.description %></td>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
